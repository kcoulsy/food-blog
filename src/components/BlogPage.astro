---
import Layout from '../layouts/Layout.astro';
import Nav from './Nav.astro';
import PageLayout from './PageLayout.astro';
const { frontmatter } = Astro.props;

// console.log(Astro.props);
---

<Layout title="hello">
  <div class="container mx-auto">
    <PageLayout
      title={frontmatter.title}
      hookDescription="asd"
      calories={frontmatter.calories}
      ingredients={frontmatter.ingredients.map((ingredient: { ingredient: any }) => ingredient.ingredient)}
      cookingTimeInMins={frontmatter.cookingTimeInMins}
      imgSrc={frontmatter.feature_image}
      numberOfServings={frontmatter.numberOfServings}
      steps={frontmatter.steps.map((step: { step: any }) => step.step)}
      tips={frontmatter.tips?.map((tip: { tip: any }) => tip.tip) || []}
      keyDetails={frontmatter.keyDetails}
      nutrition={frontmatter.nutrition}
    >
      <slot />
    </PageLayout>
  </div>
</Layout>
