---
import type { RecipeSchema } from '../types/Recipe';

const recipes = await Astro.glob<RecipeSchema>('../pages/recipes/*.md');

const latest = recipes.sort((a, b) => {
  return new Date(b.frontmatter.date).valueOf() - new Date(b.frontmatter.date).valueOf();
})[0];

const links = [
  {
    name: 'Home',
    href: '/',
  },
  {
    name: 'Recipes',
    href: '/recipes',
  },
  {
    name: 'Cocktails',
    href: '/cocktails',
  },
  {
    name: 'About',
    href: '/about',
  },
];
